{
  "name": "ZOONA",
  "short_name": "ZOONA",
  "description": "متجر زونا الإلكتروني أفضل موقع للتسوق أونلاين في السودان",
  "lang": "ar",
  "dir": "rtl",
  "start_url": "/",
  "scope": "/",
  "display": "fullscreen",
  "display_override": ["window-controls-overlay", "fullscreen", "minimal-ui"], 
  "background_color": "#D32F2F", 
  "theme_color": "#D32F2F",
  "orientation": "any",
  "categories": ["shopping", "ecommerce"],

  "gcm_sender_id": "482941778795",
  "gcm_sender_id_comment": "Do not change the GCM Sender ID",

  "icons": [
    { "src": "icon/icon-72x72.png", "sizes": "72x72", "type": "image/png" },
    { "src": "icon/icon-96x96.png", "sizes": "96x96", "type": "image/png" },
    { "src": "icon/icon-128x128.png", "sizes": "128x128", "type": "image/png" },
    { "src": "icon/icon-144x144.png", "sizes": "144x144", "type": "image/png" },
    { "src": "icon/icon-152x152.png", "sizes": "152x152", "type": "image/png" },
    { "src": "icon/icon-192x192.png", "sizes": "192x192", "type": "image/png" },
    // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
    { "src": "icon/icon-512x512.png", "sizes": "512x512", "type": "image/png" } 
  ],

  "file_handlers": [
    {
      "action": "/p/open-file.html", 
      "accept": {
        "text/plain": [".txt"]
      },
      // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
      "icons": [
        { "src": "icon/icon-512x512.png", "sizes": "512x512", "type": "image/png" }
      ]
    }
  ],
  
  "launch_handler": {
    // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
    "client_mode": "navigate-existing" 
  },
  
  "protocol_handlers": [
    // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
    {
      "protocol": "web+zoona",
      "url": "/?url=%s"
    }
  ],

  "share_target": {
    "action": "/p/share-target.html", 
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
      "url": "link"
    }
  },
  
  "screenshots": [
    // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
    {
      "src": "https://via.placeholder.com/1080x1920/FFFFFF/D32F2F?text=ZOONA+SD",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],

  "prefer_related_applications": false,
  "permissions": ["geolocation"],

  "shortcuts": [
    {
      "name": "الرئيسية",
      "short_name": "الرئيسية",
      "description": "العودة للصفحة الرئيسية",
      "url": "/",
      // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
      "icons": [{ "src": "icon/icon-512x512.png", "sizes": "512x512" }]
    }
    // ملاحظة: لا توجد فاصلة بعد هذا العنصر الأخير في القائمة
  ]
}
